{
  "name": "mishka",
  "version": "13.0.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "7.2.x",
    "grunt": "1.0.x",
    "grunt-browser-sync": "2.2.x",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-less": "1.4.x",
    "grunt-contrib-watch": "1.0.x",
    "grunt-csso": "^2.2.1",
    "grunt-postcss": "0.9.x",
    "grunt-stylelint": "^0.9.0",
    "grunt-svgmin": "^5.0.0",
    "grunt-svgstore": "^1.0.0",
    "load-grunt-tasks": "^3.5.2",
    "stylelint": "^8.4.0",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint 'source/less/**/*.less' --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "grunt build",
    "start": "npm run build && grunt serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.9"
  },
  "dependencies": {
    "grunt-contrib-imagemin": "^2.0.1"
  }
}
